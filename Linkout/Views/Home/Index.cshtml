        <h5> @Html.ActionLink("Log out ", "LogOff", "Account")  (User: @User.Identity.Name)</h5>
    </li>        
    <li class="four">
        <h5> @Html.ActionLink("About", "About") </h5>
    </li>
    
}
else
{
    <li class="one">
        <h5> @Html.ActionLink("Costco Site", "Index", "Costco") </h5>
    </li>
    <li class="two">
        <h5> @Html.ActionLink("Log In", "LogOn", "Account") </h5>
    </li>
    <li class="three">
        <h5> @Html.ActionLink("About", "About") </h5>
