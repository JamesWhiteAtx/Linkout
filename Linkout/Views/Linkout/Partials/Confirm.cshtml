<div class="schedule">
    <div ng-hide="pickedProduct()" >
        <button class="btn btn-large btn-primary" type="button" ng-click="routeType()">
            <i class="icon-arrow-left icon-white"></i>
            Please select your product first
        </button>
    </div>

    <div class="row-fluid" ng-show="pickedProduct()">

        <div class="span6 well"> 
            <h3>Confirm Your Order</h3>
    
            <div ng-show="!pickedLeather()">
                <button id="leather-offer" class="btn btn-large btn-primary" type="button" ng-click="routeLeather()">
                    <i class="icon-question-sign t icon-white"></i>
                    Interested in adding Leather Seats?
                </button>
            </div>

            <div id="conf-leather" ng-show="pickedLeather()">
                <h4>Leather Seats</h4>
                <dl class="dl-horizontal">
                  <dt>Leather Color</dt> 
                  <dd>
                    <div>{{leather.leaCol.leacolorname}}</div>
                    <div>
                        <img ng-src="{{leather.leaCol.colorurl}}" alt="{{leather.leaCol.name}}">
                    </div>
                  </dd>
                  <dt>Part Number</dt> <dd>{{leather.leaCol.name}}</dd>
                  <dt>Pattern</dt> <dd>{{leatherPtrnDescr()}}</dd>
                </dl>
            </div>

            <div ng-show="!pickedHeater()">
                <button id="heater-offer" class="btn btn-large btn-primary" type="button" ng-click="routeHeaters()">
                    <i class="icon-question-sign t icon-white"></i>
                    Interested in upgrading to driving comfort?
                </button>
            </div>

            <div id="conf-heaters" ng-show="pickedHeater()">
                <h4>Driving Comfort</h4>
                <dl class="dl-horizontal">
                  <dt>Seat Heater<span ng-show="heater.driver && heater.passenger">s</span></dt> 
                  <dd>
                    <div ng-show="pickedDriver()">{{driverDescr}} {{heaterPrice | currency}}</div>
                    <div ng-show="pickedPassenger()">{{passengerDescr}} {{heaterPrice | currency}}</div>
                  </dd>
                </dl>
            </div>

            <div id="conf-car" ng-show="leather.make">
                <dl class="dl-horizontal">
                  <dt>Car</dt> <dd>{{leather.make.name}} {{leather.year.name}} {{leather.model.name}} {{leather.car.name}}</dd>
                </dl>
            </div>

            <div id="confSchedule" ng-show="pickedSchedule()">
                <h4>Scheduling Details</h4>
                <dl class="dl-horizontal">
                  <dt>Location</dt> <dd>{{schedule.installer.descr}}</dd>
                  <dt>Miles</dt> <dd>{{schedule.installer.miles}}</dd>
                  <dt>Date</dt> <dd>{{schedule.schedDate}}</dd>
                  <dt>Time Of Day</dt> <dd>{{schedule.tod}}</dd>
                  <dt>Note</dt> <dd>{{schedule.note}}</dd>
                </dl>
            </div>
        </div>

        <div id="member-info" class="span6 well">
            <h3>Enter Costco Member Information</h3>
            <div class="form-horizontal">

                <div class="control-group">
                    <label class="control-label" for="inputEmail">Member Email</label>
                    <div class="controls">
                        <input type="text" id="inputEmail" placeholder="Email" ng-model="member.email"/>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="inputFirst">First Name</label>
                    <div class="controls">
                        <input type="text" id="inputFirst" placeholder="First Name" ng-model="member.firstname"/>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputLast">Last Name</label>
                    <div class="controls">
                        <input type="text" id="inputLast" placeholder="Last Name" ng-model="member.lastname"/>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputPhone">Phone</label>
                    <div class="controls">
                        <input type="text" id="inputPhone" placeholder="Phone" ng-model="member.phone"/>
                    </div>
                </div>
            </div>

            <div id="buttons" class="pagination-centered"  ng-show="member.email && member.lastname && member.phone">
                <button class="btn btn-large btn-primary" type="button" ng-click="linkToCostCo()">
                    Complete Order on Costco.com
                <i class="icon-arrow-right icon-white"></i></button>
            </div>

        </div>

    </div>

</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#leather-offer").tooltip({
            'title': 'Roadwire offers the finest leather interiors in the business. Take a look at our excelent offers!',
            'placement': 'bottom'
        });
        $("#heater-offer").tooltip({
            'title': 'Roadwire offers the finest seat heating systems in the business. Take a look at our excelent offers!',
            'placement': 'bottom'
        });
    });
</script>